    <script type="text/javascript">
        $(function () {
            var order = $.connection.orderHubs

            order.client.displayOrderStatus = function () {
                getOrderNotiData();
            }

            $.connection.hub.start();
            getOrderNotiData();
        })

        function getOrderNotiData() {
            var $noti = $('#orderNoti')
            var $totalNofi = $('#orderTotalNoti')
            $.ajax({
                url: location.origin + "/User/GetOrderJson",
                type: 'GET',
                dataType: 'JSON',
                success: function (data) {
                    $noti.empty()
                    $totalNofi.empty()
                    if (data.length > 0) {
                        $totalNofi.append(
                            data.length
                        )
                        $.each(data, function (i, model) {
                            $noti.append(
                                '<li>' +
                                '<a href="' + location.origin + '/OrderManage/Detail/' + model.ID + '">' +
                                '<div class="user_img"><img src="~/Content/images/in8.jpg" alt=""></div>' +
                                '<div class="notification_desc">' +
                                '<p>Đơn hàng: ' + model.ID + '</p>' +
                                '<p>Khách hàng: ' + model.CustomerName + '</p>' +
                                '<p><span>Thời điểm: ' + model.DateOrder + ' phút trước</span></p>' +
                                '</div>' +
                                '<div class="clearfix"></div>' +
                                '</a>' +
                                '</li>'
                            );
                        })
                    } else {
                        $totalNofi.append(
                            0
                        )
                        $noti.append(
                            '<li>' +
                            '<p><span>Chưa có đơn hàng mới</span></p>' +
                            '</li>' +
                            '<li>' +
                            ' <div class="notification_bottom">' +
                            ' <a href="/OrderManage/DeliveredAndPaid">Xem tất cả đơn hàng</a>' +
                            ' </div>' +
                            '</li>'
                        );
                    }
                }
            })
        }

        $(function () {
            var chat = $.connection.chatHubs

            chat.client.displayMessage = function () {
                getMessageNotiData();
            }

            $.connection.hub.start();
            getMessageNotiData();
        })

        function getMessageNotiData() {
            var $noti = $('#messageNoti')
            var $totalNofi = $('#messTotalNoti')
            $.ajax({
                url: location.origin + "/Chat/GetNotiMessage",
                type: 'GET',
                dataType: 'JSON',
                success: function (data) {
                    $noti.empty()
                    $totalNofi.empty()
                    if (data.length > 0) {
                        $totalNofi.append(
                            data.length
                        )
                        $.each(data, function (i, model) {
                            $noti.append(
                                '<li id="' + model.FromUserID + '">' +
                                '<a href="/Chat/Chating?WithUserID=' + model.FromUserID + '&MessageID=' + model.ID + '">' +
                                '<div class="user_img"><img src="/Content/images/' + model.FromUserAvatar + '" alt=""></div>' +
                                '<div class="notification_desc">' +
                                '<p>' + model.FromUserName + '</p>' +
                                '<p><span>' + model.CreatedDate + ' phút trước</span></p>' +
                                '</div>' +
                                '<div class="clearfix"></div>' +
                                '</a>' +
                                '</li>'
                            );
                        })
                    } else {
                        $totalNofi.append(
                            0
                        )
                        $noti.append(
                            '<li>' +
                            '<p><span>Chưa có tin nhắn mới</span></p>' +
                            '</li>' +
                            '<li>' +
                            ' <div class="notification_bottom">' +
                            ' <a href="/Chat/">Xem tất cả tin nhắn</a>' +
                            ' </div>' +
                            '</li>'
                        );
                    }
                }
            })
        }

        $('#btn-chat').click(function send() {
            var fromId = $('#user-id').val();
            var content = $('#btn-input').val();
            $.ajax({
                url: location.origin + "/Chat/Send",
                data: { FromUserID: fromId, ToUserID: 3, Content: content, Side: "Admin" },
                type: 'POST',
                dataType: 'JSON',
                success: function (data) {
                    if (data.status) {
                        $('#btn-input').val("");
                        $(".chatbox__body").animate({ scrollTop: 2000000 });
                    } else {
                        alert("Có lỗi xảy ra");
                        return;
                    }
                }
            })
        })
    </script>
